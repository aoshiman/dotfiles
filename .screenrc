autodetach on
altscreen on
bell_msg "^G"
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8
defscrollback 10000
escape ^Jj
startup_message off
vbell off
bind n screen
bind h prev
bind j next
bind l windowlist

defbce on
term xterm-256color
# termcapinfo xterm-256color 'is=^[r^[mJ^[H^[?7h^[?1;4;6l'

caption always "%?%F%{= gW}%:%{= Kk}%?%2n%f%07=%t%="
hardstatus alwayslastline "%Y/%m/%d %02c:%s %{= .g}%H%{-} %L=%-w%45L>%{= gw}%n %t%{-}%+w"
windowlist title  '%{u .g}Num Flags Title%='
windowlist string '%{.g}%3n %{.y}%f%09=%{-} %t %='

# changes the directory for hardcopy.
hardcopydir 'tmp/hardcopy'
hardcopy_append on
bufferfile 'tmp/screen-exchange'

# include hostlocal .screenrc
source '.screenrc.local'
